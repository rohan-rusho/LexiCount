<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base: deep blue to cyan -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#0D47A1"
                android:endColor="#00BCD4" />
        </shape>
    </item>

    <!-- Soft top glow with light cyan -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="900dp"
                android:centerX="50%"
                android:centerY="0%"
                android:startColor="#00E5FF"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Vignette around edges for depth, navy -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1200dp"
                android:centerX="50%"
                android:centerY="60%"
                android:startColor="#00000000"
                android:endColor="#0D133D" />
        </shape>
    </item>

    <!-- Bottom shadow band: dark teal -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#004D40"
                android:endColor="#00000000" />
        </shape>
    </item>

</layer-list>
